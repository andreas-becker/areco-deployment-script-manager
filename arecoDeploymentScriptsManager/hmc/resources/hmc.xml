<configuration xmlns="hybris.de/schemas/hmc/generic"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">


	<!-- Configuration for extension arecoDeploymentScriptsManager -->

	<explorertree>
		<group name="system">
			<group name="arecoDeploymentScriptsManagergroup">
				<typeref type="ScriptExecution"
				    description="typeref.scriptExecution.description" />
				 <typeref type="RunPendingDeploymentScriptsWizard"
				     description="typeref.runpendingdeploymentscriptswizard.description"/>
				 <typeref type="DeploymentEnvironment"
                    description="typeref.deploymentenvironment.description" />
			</group>
		</group>
	</explorertree>
	
   <type name="ScriptExecution" mode="append">
      <organizer>
         <search autoperform="false" mode="replace">
            <condition attribute="extensionName" />
            <condition attribute="scriptName" />
            <condition attribute="result" />
            <condition attribute="phase" />
         </search>
         <result defaultview="list" mode="replace">
            <listview >
               <itemlayout>
                  <attribute name="creationtime" width="130"/>
                  <attribute name="extensionName" width="250"/>
                  <attribute name="scriptName" width="300"/>
                  <attribute name="result" width="200"/>
                  <attribute name="phase" width="100"/>
               </itemlayout>
            </listview>
            <editview  mode="replace">
               <itemlayout>
                  <attribute name="creationtime"/>
                  <attribute name="extensionName"/>
                  <attribute name="scriptName"/>
                  <attribute name="result"/>
                  <attribute name="phase"/>
               </itemlayout>
            </editview>
            <treeview  mode="replace">
               <itemlayout>
                  <attribute name="creationtime"/>
                  <attribute name="extensionName"/>
                  <attribute name="scriptName"/>
                  <attribute name="result"/>
                  <attribute name="phase"/>
               </itemlayout>
            </treeview>
         </result>
         <editor>
            <essentials>
               <columnlayout>
                  <row>
                     <attribute name="extensionName" editable="false"/>
                     <attribute name="scriptName" editable="false"/>
                  </row>
               </columnlayout>
            </essentials>
            <tab name="common">
               <section name="section.common">
                  <listlayout>
                    <attribute name="result" editable="false"/>
                    <attribute name="phase" editable="false"/>
                  </listlayout>
               </section>
            </tab>
         </editor>
      </organizer>
      <defaultreference searchattribute="scriptName" mode="replace"
            sortattribute="creationtime">
         <itemlayout>
            <attribute name="extensionName"/>
            <attribute name="scriptName"/>
         </itemlayout>
      </defaultreference>
   </type>
   
    <type name="ScriptExecutionResult" mode="append">
      <organizer>
         <search autoperform="true" mode="replace">
            <condition attribute="name" />
            <condition attribute="description" />
         </search>
         <result defaultview="list" mode="replace">
            <listview >
               <itemlayout>
                  <attribute name="name"/>
                  <attribute name="description"/>
               </itemlayout>
            </listview>
            <editview  mode="replace">
               <itemlayout>
                 <attribute name="name"/>
                 <attribute name="description"/>
               </itemlayout>
            </editview>
            <treeview  mode="replace">
               <itemlayout>
                  <attribute name="name"/>
                  <attribute name="description"/>
               </itemlayout>
            </treeview>
         </result>
         <editor>
            <essentials>
               <columnlayout>
                  <row>
                     <attribute name="name" editable="false"/>
                     <attribute name="description"/>
                  </row>
               </columnlayout>
            </essentials>
            <tab name="common">
               <section name="section.common">
                  <listlayout>
                    <attribute name="canBeRunnedAgain" editable="false"/>
                  </listlayout>
               </section>
            </tab>
         </editor>
      </organizer>
      <defaultreference searchattribute="name" mode="replace"
            sortattribute="name">
         <itemlayout>
            <attribute name="name"/>
         </itemlayout>
      </defaultreference>
   </type>
   
    <type name="DeploymentEnvironment" mode="append">
      <organizer>
         <search autoperform="true" mode="replace">
            <condition attribute="name" />
            <condition attribute="description" />
         </search>
         <result defaultview="list" mode="replace">
            <listview >
               <itemlayout>
                  <attribute name="name"/>
                  <attribute name="description"/>
               </itemlayout>
            </listview>
            <editview  mode="replace">
               <itemlayout>
                 <attribute name="name"/>
                 <attribute name="description"/>
               </itemlayout>
            </editview>
            <treeview  mode="replace">
               <itemlayout>
                  <attribute name="name"/>
                  <attribute name="description"/>
               </itemlayout>
            </treeview>
         </result>
         <editor>
            <essentials>
               <columnlayout>
                  <row>
                     <attribute name="name" editable="false"/>
                     <attribute name="description"/>
                  </row>
               </columnlayout>
            </essentials>
         </editor>
      </organizer>
      <defaultreference searchattribute="name" mode="replace"
            sortattribute="name">
         <itemlayout>
            <attribute name="name"/>
         </itemlayout>
      </defaultreference>
   </type>

   <type name="RunPendingDeploymentScriptsWizard" mode="append">
      <organizer>
         <editor>
            <tab name="tab.runpendingdeploymentscriptswizard.start" position="0">
               <section name="section.runpendingdeploymentscriptswizard.welcome">
                  <listlayout>
                     <text name="text.runpendingdeploymentscriptswizard.instructions"/>
                  </listlayout>
               </section>
            </tab>
         </editor>
      </organizer>
   </type>
</configuration>
